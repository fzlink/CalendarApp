<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/darker_gray"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:text="Reminder Times"
        android:textAlignment="center"
        android:textSize="22sp" />

    <LinearLayout
        android:id="@+id/reminderOptionCheckBoxContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:orientation="vertical">

        <CheckBox
            android:id="@+id/onStartTimeCheckBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="On Start Time" />

        <CheckBox
            android:id="@+id/before5MinutesCheckBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Before 5 Minutes" />

        <CheckBox
            android:id="@+id/before15MinutesCheckBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Before 15 Minutes" />

        <CheckBox
            android:id="@+id/before1HourCheckBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Before 1 Hour" />

        <CheckBox
            android:id="@+id/before1DayCheckBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Before 1 Day" />

        <CheckBox
            android:id="@+id/customReminderDateTimeCheckBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Custom" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Remind:"
            android:textAlignment="center"
            android:textColor="#CC030000"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/addEventRemindDateText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Date"
            android:textAlignment="center"
            android:textColor="#CC070000"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/addEventRemindTimeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Time"
            android:textAlignment="center"
            android:textColor="#CC070000"
            android:textSize="22sp" />

        <ImageButton
            android:id="@+id/remindDatePicker"
            android:layout_width="30dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/calendar_icon" />

        <ImageButton
            android:id="@+id/remindTimePicker"
            android:layout_width="30dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/time_icon" />

    </LinearLayout>

    <Button
        android:id="@+id/reminderOptionsSaveButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save" />
</LinearLayout>